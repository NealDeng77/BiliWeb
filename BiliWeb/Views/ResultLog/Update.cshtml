@model BiliWeb.Models.ResultLogModel

@{
    ViewData["Title"] = "Update";
}
<div class="crudi-page">


    <h2>Update</h2>

    <h4>Update data on the record</h4>

    <br />
    <hr />
    <div class="row">
        <div class="col">
            <br />
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ID" hidden />
                <input asp-for="Date" hidden />

                <div class="form-group">
                    <div class="row">
                        <div class="col-2 text-right attr-name">
                            <label asp-for="BilirubinValue" class="control-label">Bilirubin Value</label>
                        </div>
                        <div class="col">
                            <input asp-for="BilirubinValue" class="form-control" />
                            <span asp-validation-for="BilirubinValue" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-2 text-right attr-name">
                            <label asp-for="ClinicID" class="control-label">Clinic ID</label>
                        </div>
                        <div class="col">
                            @Html.DropDownListFor(m => m.ClinicID, ViewData["ClinicIDList"] as IEnumerable<SelectListItem>, "Select Clinic")
                            @*<input asp-for="ClinicID" class="form-control" />*@
                            <span asp-validation-for="ClinicID" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-2 text-right attr-name">
                            <label asp-for="PhoneID" class="control-label">Phone ID</label>
                        </div>
                        <div class="col">
                            @Html.DropDownListFor(m => m.PhoneID, ViewData["PhoneIDList"] as IEnumerable<SelectListItem>, "Select Phone")
                            @*<input asp-for="ClinicID" class="form-control" />*@
                            <span asp-validation-for="PhoneID" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-2 text-right attr-name">
                            <label asp-for="UserID" class="control-label">User ID</label>
                        </div>
                        <div class="col">
                            @Html.DropDownListFor(m => m.UserID, ViewData["UserIDList"] as IEnumerable<SelectListItem>, "Select User")
                            @*<input asp-for="ClinicID" class="form-control" />*@
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-2 text-right attr-name">
                            <label asp-for="PhotoID" class="control-label">Photo ID</label>
                        </div>
                        <div class="col">
                            <input asp-for="PhotoID" class="form-control" />
                            <span asp-validation-for="PhotoID" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <br />
                    <div class="row">
                        <div class="col-1"></div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info">Back</a>
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>