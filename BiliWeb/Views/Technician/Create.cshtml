@model BiliWeb.Models.TechnicianModel

@{
    ViewData["Title"] = "Create";
}
<div class="crudi-page">

    <h2>Create</h2>

    <h4>Enter data to create a new Technician record</h4>

    <br />
    <hr />
    <div class="row">
        <div class="col">
            <br />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ID" hidden />
                <input asp-for="Date" hidden />

                <div class="form-group">
                    <div class="row">
                        <div class="col-1 text-right">
                            <label asp-for="FirstName" class="control-label"></label>
                        </div>
                        <div class="col">
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-1 text-right">
                            <label asp-for="LastName" class="control-label"></label>
                        </div>
                        <div class="col">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-1 text-right">
                            <label asp-for="DateOfBirth" class="control-label"></label>
                        </div>
                        <div class="col">
                            <input asp-for="DateOfBirth" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-1 text-right">
                            <label asp-for="Clinic" class="control-label"></label>
                        </div>
                        <div class="col">
                            <input asp-for="Clinic" class="form-control" />
                            <span asp-validation-for="Clinic" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <br />
                    <div class="row">
                        <div class="col-1"></div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info">Back</a>
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>