@model BiliWeb.Models.PhoneModel

@{
    ViewData["Title"] = "Create";
}
    <div class="crudi-page">

        <h2>Create</h2>

        <h4>Enter data to create a new Phone record</h4>

        <br />
        <hr />
        <div class="row">
            <div class="col">
                <br />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="ID" hidden />
                    <input asp-for="Date" hidden />

                    <div class="form-group">
                        <div class="row">
                            <div class="col-1 text-right">
                                <label asp-for="ClinicID" class="control-label"></label>
                            </div>
                            <div class="col">
                                @Html.DropDownListFor(m => m.ClinicID, ViewData["ClinicIDList"] as IEnumerable<SelectListItem>, "Select Clinic")
                                <span asp-validation-for="ClinicID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-1 text-right">
                                <label asp-for="DeviceModel" class="control-label"></label>
                            </div>
                            <div class="col">
                                <input asp-for="DeviceModel" class="form-control" />
                                <span asp-validation-for="DeviceModel" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-1 text-right">
                                <label asp-for="ModelNumber" class="control-label"></label>
                            </div>
                            <div class="col">
                                <input asp-for="ModelNumber" class="form-control" />
                                <span asp-validation-for="ModelNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-1 text-right">
                                <label asp-for="Description" class="control-label"></label>
                            </div>
                            <div class="col">
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-1 text-right">
                                <label asp-for="SerialNumber" class="control-label"></label>
                            </div>
                            <div class="col">
                                <input asp-for="SerialNumber" class="form-control" />
                                <span asp-validation-for="SerialNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-1 text-right">
                                <label asp-for="Status" class="control-label"></label>
                            </div>
                            <div class="col">
                                @{ 
                                    @Html.DropDownListFor(m => m.Status, new SelectList(Enum.GetValues(typeof(PhoneStatusEnum)), "Select Phone Status"));
                                }
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    @*TimeOut will use default settings for Create*@

                    @*TODO Copy the Form Group from Above and Change the "Name" attributes to the attribute to edit.  The entire block of form group is needed for each attribute*@

                    <div class="form-group">
                        <br />
                        <div class="row">
                            <div class="col-1"></div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-info">Back</a>
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>



